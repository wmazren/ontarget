<div class="widget widget-table action-table">
	<div class="widget-header">
		<i class="icon-th-list"></i>
		<h3>My Goals</h3>
	</div> <!-- /widget-header -->
		
	<div class="widget-content">
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Goal</th>
	        <th>% Complete</th>
	        <th>Status</th>
		      <th>Start Date</th>
		      <th>Due Date</th>
					<th class="td-actions">Action</th>
				</tr>
			</thead>
			<tbody>
        <% @goals.each do |goal| %>
				  <tr>
				    <td>
	            <strong><%= link_to goal.title, goal_path(goal) %></strong><br>
	            <p><%= truncate goal.description, length: 50 %></p>
	        </td>
	        <td><%= number_to_percentage(goal.progress.percent_complete, :precision => 0) %></td>
	        <td><%= goal.progress.state %></td>
		      <td><%=l goal.start_date %></td>
		      <td><%=l goal.due_date %></td>
					  <td class="td-actions">
						  <%= link_to "Edit", edit_goal_path(goal), :class => 'btn btn-mini btn-success' %><br>
	            <%= link_to 'Progress', edit_progress_path(goal.progress), :class => 'btn btn-mini btn-warning' %><br>
	            <%= link_to 'Delete', goal, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %>
					  </td>
				  </tr>
				<% end %>
      </tbody>
    </table>
    
    <div class="form-actions">
      <%= link_to "Add New Goal", new_goal_path, :class => 'btn btn-primary' %>
    </div>
	</div> <!-- /widget-content -->
</div> <!-- /widget -->
