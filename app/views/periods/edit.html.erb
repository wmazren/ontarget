<%= simple_form_for(@period, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="inputs">
    <%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :start_date, :as => :date_picker, :required => true %>
    <%= f.input :end_date, :as => :date_picker, :required => true %>
    
    <%= f.input :state, :as => :radio_buttons, :required => true, :collection => [ "open", "closed" ] %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
