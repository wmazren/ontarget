<div class="widget widget-table action-table">
	<div class="widget-header">
		<i class="icon-th-list"></i>
		<h3>All Periods</h3>
	</div> <!-- /widget-header -->
		
	<div class="widget-content">
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Period Name</th>
					<th>Start Date</th>
					<th>End Date</th>
					<th>State</th>
					<th>Account</th>
					<th class="td-actions">Action</th>
				</tr>
			</thead>
			<tbody>
        <% @periods.each do |period| %>
				  <tr>
				    <td><%= period.name %></td>
			      <td><%=l period.start_date %></td>
			      <td><%=l period.end_date %></td>
			      <td><%= period.state %></td>
			      <td><%= period.account_id %></td>
					  <td class="td-actions">
						  <%= link_to "Edit", edit_period_path(period), :class => 'btn btn-mini' %>
			        <%= link_to 'Destroy', period, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %>
					  </td>
				  </tr>
				<% end %>
      </tbody>
    </table>
    
    <div class="form-actions">
      <%= link_to "Add New Period", new_period_path, :class => 'btn btn-primary' %>
    </div>
	</div> <!-- /widget-content -->
</div> <!-- /widget -->
