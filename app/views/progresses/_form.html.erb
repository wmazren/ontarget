<%= simple_form_for(@progress, :html => { :class => 'form-horizontal' }) do |f| %>

  <div class="inputs">
    <%= f.input :progress_update, :input_html => { :class => "span6" } %>
    <%= f.input :percent_complete, :input_html => { :class => "span1" } %>
    <%= f.input :state, :collection => [ "new", "in progress", "completed" ], :input_html => { :class => "span2" } %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                goals_path, :class => 'btn' %>
  </div>
  
<% end %>
